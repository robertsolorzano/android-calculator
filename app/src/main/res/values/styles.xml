<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Style for all Calculator Buttons -->
    <style name="CalculatorButton">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">82dp</item>
        <item name="android:layout_margin">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Numbers -->
    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">34sp</item>
    </style>

    <!-- Operators -->
    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">34sp</item>
    </style>

    <!-- Controls -->
    <style name="CalculatorButton.Control" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Results -->
    <style name="CalculatorButton.Result">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">""</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">62sp</item>
    </style>



</resources>
